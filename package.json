{
  "name": "pruner",
  "displayName": "Pruner",
  "description": "Live unit testing and coverage gutters powered by the Pruner CLI.",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pruner/vscode"
  },
  "icon": "app_images/icon.png",
  "galleryBanner": {
    "color": "#24381b",
    "theme": "dark"
  },
  "bugs": "https://github.com/pruner/vscode/issues",
  "publisher": "Pruner",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "gutters",
    "code coverage",
    "live unit testing",
    "ncrunch",
    "dotcover",
    "lcov",
    "vscode",
    "xml",
    "multi-root ready"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "pruner",
      "properties": {}
    },
    "commands": [],
    "keybindings": [],
    "menus": {
      "editor/context": []
    }
  },
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "lint": "tslint './src/**/*.ts' './test/**/*.ts'",
    "pretty": "tslint --fix './src/**/*.ts' './test/**/*.ts'",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "test-unit": "cross-env MOCHA_GREP=@unit npm test --silent",
    "test-integration": "cross-env CODE_TESTS_WORKSPACE=./example/example.code-workspace MOCHA_GREP=@integration npm test --silent",
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm install && npm run lint && npm run compile",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/glob": "7.1.1",
    "@types/lodash": "4.14.126",
    "@types/mocha": "5.2.6",
    "@types/node": "10.14.6",
    "@types/request": "2.48.1",
    "@types/uuid": "8.0.0",
    "chai": "4.2.0",
    "cross-env": "5.2.0",
    "mocha": "6.1.4",
    "tslint": "5.16.0",
    "typescript": "3.4.5",
    "vscode": "1.1.34"
  },
  "dependencies": {
    "glob": "7.1.4",
    "uuid": "8.2.0"
  }
}
